<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.haribooo.bookmyparcel.DetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blue"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/button2"
                android:background="@drawable/yellowb"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Gmail" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:background="@drawable/yellowb"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:layout_below="@+id/button5"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="SMS" />

            <EditText
                android:id="@+id/sndr"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:textColor="#ffffffff"
                android:lines="16"
                android:maxLines="30"
                android:minLines="16"
                android:scrollbars="vertical" />

            <CheckBox
                android:id="@+id/ck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sndr"
                android:textColor="#ffffffff"
                android:layout_marginLeft="25dp"
                android:text="Terms and Condition" />




            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/sndr"
                android:layout_toRightOf="@id/ck"
                android:background="@drawable/blue"
                android:layout_marginLeft="10dp"
                android:onClick="readmore"
                android:text="Read more..."
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/ck"
                android:background="@drawable/yellowb"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:onClick="read"
                android:text="Verify" />


            <TextView
                android:id="@+id/das1"
                android:layout_below="@+id/button1"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:text="Made a Mistake? Then Reset it."/>
            <Button
                android:id="@+id/bat"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/yellowb"
                android:layout_below="@id/das1"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:text="Reset" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
